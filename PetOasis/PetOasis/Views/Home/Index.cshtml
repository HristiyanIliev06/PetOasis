@using PetOasis.ViewModel
@model ViewModels
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1 class="fade-in">Welcome to Pet Oasis</h1>
        <p class="fade-in-delay">Where every pet finds their paradise</p>
    </div>
</section>

<!-- Top Facilities -->
<section class="facilities">
    <h2>Our top 3 facilities</h2>
    <p>Our best pet hotels and their accompanying shelters</p>
    <div class="facility-cards">
        @if (Model.PetHotels != null && Model.PetHotels.Count() >= 3)
        {
            @for (int i = 1; i <= 3; i++)
            {
                <article class="facility-card">
                <h3>@Model.PetHotels.ElementAt(i).Name</h3>
                <img src="@Model.PetHotels.ElementAt(i).Outside_View" alt="@Model.PetHotels.ElementAt(i).Name Facility" />
                <a href="@Url.Action("Details", "PetHotels", new { city = Model.PetHotels.ElementAt(i).City })">
                    <button class="view-btn">View</button>
                </a>
                </article>
            }
        }        
        else
        {
            <p>...</p>
        }
    </div>
    <a asp-area="" asp-controller="PetHotels" asp-action="Index">
        <button class="view-all-btn">VIEW ALL</button>
    </a>
</section>

<!-- Quote Section -->
<section class="quote">
    <div class="quote-container">
        <div class="quote-text">
            <i class="fas fa-quote-left"></i>
            <h2>"Care for every paw, home for every heart"</h2>
            <i class="fas fa-quote-right"></i>
        </div>
        <div class="values-container">
            <div class="value-item">
                <i class="fas fa-heart"></i>
                <h3>Care</h3>
                <p>
                    Providing loving attention and professional care for every pet that
                    enters our doors
                </p>
            </div>
            <div class="value-item">
                <i class="fas fa-home"></i>
                <h3>Home</h3>
                <p>
                    Creating a warm, comfortable environment that feels just like home
                </p>
            </div>
            <div class="value-item">
                <i class="fas fa-dove"></i>
                <h3>Peace</h3>
                <p>Ensuring tranquil spaces where pets can relax and feel secure</p>
            </div>
        </div>
    </div>
</section>

<!-- Feedback Section -->
<section class="feedback">
    <h2>Our customers' feedback</h2>
    <p class="subtitle">What our furry friends think about us</p>

    <div class="feedback-slider">
        <div class="feedback-track">
            @if (Model.PawPosts.Any())
            {
                
            
            @foreach (var pawpost in Model.PawPosts)
            {
                <div class="feedback-card">
                    <div class="pet-image">
                        @* <img src="@pawpost." alt="@pawpost.Title" /> *@
                    </div>
                    <div class="speech-bubble">@pawpost.Description</div>
                    <div class="paw-rating">
                        <i class="fas fa-paw"></i>
                        <i class="fas fa-paw"></i>
                        <i class="fas fa-paw"></i>
                        <i class="fas fa-paw"></i>
                        <i class="fas fa-paw"></i>
                    </div>
                    <p class="pet-name">@pawpost.Additional_mentions</p>
                </div>
            }
            }
            else
            {
                <p>...</p>
            }
            <!-- Add more feedback cards as needed -->
        </div>
    </div>

    <div class="slider-controls">
        <button class="prev-btn"><i class="fas fa-chevron-left"></i></button>
        <button class="next-btn"><i class="fas fa-chevron-right"></i></button>
    </div>
</section>
<script src="~/js/slider.js" asp-append-version="true"></script>
