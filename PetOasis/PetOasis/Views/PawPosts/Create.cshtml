@using PetOasis.Data.Entities
@model PawPost

@{
    ViewData["Title"] = "Create";
}
<style>
    .row {
        display: flex;
        justify-content: center;
        background-color: #FFD780;
        margin: auto;
        padding: 1em 0;
        border-radius: 10px;
    }

    .col-md-4 {
        width: 60%;
    }

    .profile-titles {
        text-align: center;
        margin: 1em 0;
    }

    #pt2 {
        margin-left: 2em;
    }

    .back-to-list {
        margin: auto;
    }
    .back{
        display:flex;
        justify-content:center;
    }
</style>
<div class="profile-titles">
    <h1 id="pt1">Create</h1>

    <h1 id="pt2">PawPost</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Additional_mentions" class="control-label"></label>
                <input asp-for="Additional_mentions" class="form-control" />
                <span asp-validation-for="Additional_mentions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="color: gray;" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
