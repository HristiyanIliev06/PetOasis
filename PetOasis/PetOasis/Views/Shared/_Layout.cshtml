<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetOasis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetOasis.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Itim&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
      <div class="logo">
        <img src="media/imagery/logo.png" alt="Pet Oasis Logo" />
      </div>
      <nav class="nav">
        <ul>
          <li><a href="base.html">Home</a></li>
          <li><a href="facilities_home.html">Facilities</a></li>
          <li><a href="pawposts.html">Blog and News</a></li>
          <li><a href="about_us.html">About Us</a></li>
        </ul>
      </nav>
      <div class="search-and-login">
        <input type="text" placeholder="Search..." />

        <button>
          <a href="register.html">Register</a>
        </button>
      </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <footer class="footer">
        <div class="footer-container">
            <!-- Left Section -->
            <div class="footer-left">
                <img src="media/imagery/logo.png"
                     alt="Pet Oasis Logo"
                     class="footer-logo" />
                <p>Care for every paw,<br />home for every soul</p>
                <div class="social-icons">
                    <a href="#facebook">
                        <img src="facebook-icon.png" alt="Facebook" />
                    </a>
                    <a href="#instagram">
                        <img src="instagram-icon.png" alt="Instagram" />
                    </a>
                    <a href="#email"><img src="email-icon.png" alt="Email" /></a>
                    <a href="#website"><img src="web-icon.png" alt="Website" /></a>
                </div>
                <p> 2024 PetOasis.com.<br />All rights reserved.</p>
            </div>

            <!-- Map Section -->
            <div class="footer-map">
                <img src="bulgaria-map.png" alt="Map of Bulgaria" />
            </div>

            <!-- Right Section -->
            <div class="footer-right">
                <div class="email-bulletin">
                    <h4>Email bulletins</h4>
                    <form>
                        <input type="email" placeholder="Your email" required />
                        <button type="submit">Submit</button>
                    </form>
                </div>
                <nav class="footer-links">
                    <a href="#facilities">Facilities</a>
                    <a href="#about">About us</a>
                    <a href="#blog">Blog</a>
                </nav>
                <div class="terms">
                    <a href="#privacy">Privacy Policy</a>
                    <a href="#terms">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    <!--<script src="static/js/nav.js"></script>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
